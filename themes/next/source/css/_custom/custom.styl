// Custom styles.
@media screen and (min-width:900px) {

    body {
		background-image:url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1555677859354&di=0c094607a82e7648b3bcb415a8843335&imgtype=0&src=http%3A%2F%2Fimg.sj33.cn%2Fuploads%2Fallimg%2F201710%2F7-1G00Z92430.jpg);
		background-repeat: no-repeat;
		background-attachment:fixed;
		background-position: 0 0;
		background-size: 100% 100%;
    }	
    //改变背景色和透明度
    .main-inner {
      background: #fff;
      opacity: 0.8;
    }
    code {
      color: #ff7600;
      background: #fbf7f8;
      margin: 2px;
    }
    // 大代码块的自定义样式
    .highlight, pre {
      margin: 5px 0;
      padding: 5px;
      border-radius: 3px;
    }
    .highlight, code, pre {
      border: 1px solid #d6d6d6;
    }
}

.site-title {
  font-size: 24px;
  font-weight: 400;
  font-family: 'Damion',"PingFang SC","Microsoft YaHei",sans-serif;
}
#footer {
  color: white !important;
}
.headband {
  background: none !important;
}
// 自定义页脚跳动的心样式
@keyframes heartAnimate {
    0%,100%{transform:scale(1);}
    10%,30%{transform:scale(0.9);}
    20%,40%,60%,80%{transform:scale(1.1);}
    50%,70%{transform:scale(1.1);}
}
.with-love {
    color: #A8538C;
    animation: heartAnimate 1.33s ease-in-out infinite;
}